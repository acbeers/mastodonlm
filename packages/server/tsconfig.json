{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "types": ["node", "jest"],
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "target": "es2017",
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist"
  }
}
